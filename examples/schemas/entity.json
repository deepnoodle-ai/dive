{
  "type": "object",
  "title": "Entity Extraction",
  "description": "Schema for extracting entities from documents",
  "properties": {
    "people": {
      "type": "array",
      "description": "People mentioned in the document",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Full name of the person"
          },
          "role": {
            "type": "string",
            "description": "Role or title of the person"
          },
          "organization": {
            "type": "string",
            "description": "Organization the person is associated with"
          }
        },
        "required": ["name"]
      }
    },
    "organizations": {
      "type": "array",
      "description": "Organizations mentioned in the document",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the organization"
          },
          "type": {
            "type": "string",
            "description": "Type of organization (company, government, NGO, etc.)"
          },
          "industry": {
            "type": "string",
            "description": "Industry or sector"
          }
        },
        "required": ["name"]
      }
    },
    "locations": {
      "type": "array",
      "description": "Locations mentioned in the document",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the location"
          },
          "type": {
            "type": "string",
            "description": "Type of location (city, country, address, etc.)"
          },
          "coordinates": {
            "type": "object",
            "description": "Geographic coordinates if available",
            "properties": {
              "latitude": {
                "type": "number"
              },
              "longitude": {
                "type": "number"
              }
            }
          }
        },
        "required": ["name"]
      }
    },
    "dates": {
      "type": "array",
      "description": "Important dates mentioned in the document",
      "items": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "description": "The date value",
            "format": "date"
          },
          "context": {
            "type": "string",
            "description": "Context or description of what this date represents"
          }
        },
        "required": ["date"]
      }
    },
    "monetary_values": {
      "type": "array",
      "description": "Monetary values mentioned in the document",
      "items": {
        "type": "object",
        "properties": {
          "amount": {
            "type": "number",
            "description": "The monetary amount"
          },
          "currency": {
            "type": "string",
            "description": "Currency code (USD, EUR, etc.)"
          },
          "context": {
            "type": "string",
            "description": "Context of what this amount represents"
          }
        },
        "required": ["amount"]
      }
    }
  }
}